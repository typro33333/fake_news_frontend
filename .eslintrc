{
  "extends": [
    "eslint:recommended"
  ],
  "rules":{
    "quotes": [2,"double",{ 
      "avoidEscape": true 
      }
    ],
    "consistent-return": 2,
    "no-else-return"   : 1,
    "semi"             : [1, "always"],
    "space-unary-ops"  : 2,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "settings": {
    "import/resolver": {
        "alias": [
            ["@components","./src/components"],
            ["@page","./src/page"],
            ["@image","./src/assets/images"]
        ]
    }
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}